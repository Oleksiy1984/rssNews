    <definition name="register" extends="common">
        <put-attribute name="title" value="page.register.title"/>
        <put-attribute name="body" value="/WEB-INF/views/register.jsp"/>
        <put-attribute name="current" value="register"/>
    </definition>

    <definition name="login" extends="common">
        <put-attribute name="title" value="page.login.title"/>
        <put-attribute name="body" value="/WEB-INF/views/login.jsp"/>
        <put-attribute name="current" value="login"/>
    </definition>

    <definition name="contact" extends="common">
        <put-attribute name="title" value="page.contact.title"/>
        <put-attribute name="body" value="/WEB-INF/views/contact.jsp"/>
        <put-attribute name="current" value="contact"/>
    </definition>

</tiles-definitions>